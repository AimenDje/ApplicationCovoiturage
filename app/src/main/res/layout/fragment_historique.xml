<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historiques_trajets_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="50dp"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".ecrans.historique.HistoriqueFragment">


    <LinearLayout
        android:id="@+id/contener_liste_historique"
        android:layout_width="364dp"
        android:layout_height="494dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_icon_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/loadingPanel_historiqueTrajets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_rectangle_blanc"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar_loading_historiqueTrajets"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/purple_200" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/liste_historique_trajets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titre_historique_trajets"
                android:layout_width="294dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="Historique des trajets"
                android:textSize="24sp" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
