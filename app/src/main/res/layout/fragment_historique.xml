<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historiques_trajets_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="50dp"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".ecrans.historique.HistoriqueFragment">


    <LinearLayout
        android:id="@+id/contener_liste_historique"
        android:layout_width="364dp"
        android:layout_height="494dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_icon_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>
        <LinearLayout
            android:id="@+id/linearLayout_item_trajets"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/rounded_rectangle_blanc"
            android:orientation="vertical"
            android:visibility="visible"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_profile"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/arnold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginVertical="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_nom_conducteur_trajet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PrÃ©nom Nom"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/textView_destination_trajet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ville depart -> Ville Destination"/>

                    <TextView
                        android:id="@+id/textView_date_trajet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="05/11/2023 15h00"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titre_historique_trajets"
                android:layout_width="294dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="Historique des trajets"
                android:textSize="24sp" />
        </LinearLayout>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/liste_historique_trajets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="@+id/contener_liste_historique"
        app:layout_constraintEnd_toEndOf="@+id/contener_liste_historique"
        app:layout_constraintStart_toStartOf="@+id/contener_liste_historique"
        app:layout_constraintTop_toTopOf="@+id/contener_liste_historique" />

</androidx.constraintlayout.widget.ConstraintLayout>
